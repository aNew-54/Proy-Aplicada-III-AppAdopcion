<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/item_intervencion.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="6dp"
    android:background="@drawable/bg_intervencion_item_m3"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/tvTituloIntervencion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#1C1B1F"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDescripcionIntervencion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textColor="#49454F"
        android:textSize="12sp"
        android:maxLines="1"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/tvFechaIntervencion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="#6B3FA8"
        android:textSize="11sp" />

</LinearLayout>