<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_theme_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:visibility="gone" />

            <!-- ── HEADER con portada + foto de perfil ──────── -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="220dp">

                <ImageView
                    android:id="@+id/ivPortada"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_registro_header"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="16dp"
                    android:text="Mi Refugio"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardFotoPerfil"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    app:cardCornerRadius="44dp"
                    app:cardElevation="4dp"
                    app:strokeColor="@color/white"
                    app:strokeWidth="3dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivPortada">

                    <ImageView
                        android:id="@+id/ivFotoPerfil"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_pets" />
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Nombre del refugio -->
            <TextView
                android:id="@+id/tvNombreRefugio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="Nombre del Refugio"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMascotasDisponibles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="0 mascotas disponibles"
                android:textColor="?attr/colorPrimary"
                android:textSize="13sp" />

            <!-- ── INFORMACIÓN DEL REFUGIO ──────────────────── -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Información del refugio"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <ImageView android:layout_width="20dp" android:layout_height="20dp"
                            android:src="@drawable/ic_location_on" app:tint="?attr/colorPrimary" />
                        <TextView android:id="@+id/tvDireccion"
                            android:layout_width="0dp" android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp" android:text="---"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <ImageView android:layout_width="20dp" android:layout_height="20dp"
                            android:src="@drawable/ic_email" app:tint="?attr/colorPrimary" />
                        <TextView android:id="@+id/tvCorreo"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:layout_marginStart="12dp" android:text="---" android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <ImageView android:layout_width="20dp" android:layout_height="20dp"
                            android:src="@drawable/ic_phone" app:tint="?attr/colorPrimary" />
                        <TextView android:id="@+id/tvTelefono"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:layout_marginStart="12dp" android:text="---" android:textSize="14sp" />
                    </LinearLayout>

                    <TextView android:id="@+id/tvDescripcion"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:layout_marginTop="4dp" android:text="---" android:textSize="13sp"
                        android:textColor="?attr/colorOnSurfaceVariant" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ── BOTONES DE ACCIÓN ───────────────────────── -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditarPerfil"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:text="Editar Perfil"
                app:icon="@drawable/ic_edit"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerMascotas"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:text="Ver mis mascotas"
                app:icon="@drawable/ic_pets"
                app:cornerRadius="12dp" />

            <!-- ── SOLICITUDES RECIBIDAS ───────────────────── -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:text="Solicitudes recibidas"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSinSolicitudes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="Aún no hay solicitudes"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:visibility="visible" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSolicitudes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingHorizontal="16dp"
                android:visibility="gone" />

            <!-- ── CERRAR SESIÓN ───────────────────────────── -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCerrarSesion"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="32dp"
                android:backgroundTint="@color/red_error"
                android:text="Cerrar Sesión"
                android:textColor="@color/white"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_logout"
                app:iconTint="@color/white" />

        </LinearLayout>
    </ScrollView>
</layout>