<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.AppAdopcion.Button.Segmented"
        parent="Widget.Material3.Button.OutlinedButton">

        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:minHeight">48dp</item>

        <item name="cornerRadius">12dp</item>

        <item name="strokeColor">?attr/colorOutline</item>
        <item name="strokeWidth">1dp</item>

        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>

    </style>

    <style name="TextAppearance.AppAdopcion.Collapsing.Expanded"
        parent="TextAppearance.Material3.DisplaySmall">

        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="TextAppearance.AppAdopcion.Collapsing.Collapsed"
        parent="TextAppearance.Material3.TitleLarge">

        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="Widget.AppAdopcion.Button.IconOnly" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="iconGravity">textStart</item>
    </style>
</resources>